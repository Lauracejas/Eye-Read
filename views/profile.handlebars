<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>


<div class="SearchBox">
		<input type="text" class="SearchBox-input search-input" placeholder="Enter the book you want to search">
	
			<button class="SearchBox-button" id="booksearch" >
				<i class="SearchBox-icon  material-icons">search</i>
			</button>
		
	</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add this Book to my Reading List:</h3>
<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Add Book To:
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="#">Books I want to read</a>
    <a class="dropdown-item" href="#">Books I have read</a>
  </div>
</div>

<div class="ReadButton">
    <button type="button" class="btn btn-primary">I've Read this Book!</button>
</div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>
