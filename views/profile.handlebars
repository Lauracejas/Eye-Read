{{log user}}
<h2>Books I Have Already Read</h2>
{{#each user.books}}
{{#if read}}
<div class=row></div>  
  <div class="row cards">
    <div class="card mb-5" style="max-width: 300px;">
      <div class="row g-0">
        <div class="col-md-10">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text"><small class="text-muted">{{author}}</small></p>
            <img src="{{image_link}}" alt="...">
          </div>
          <div class="link-btn">
            <a href="{{book_link}}" class="btn btn-primary">Preview</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}
{{/each}}

