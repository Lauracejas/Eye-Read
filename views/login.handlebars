<form class="login-form">

  <div class="form-group login-form backlight loginEl">
    <h3 class="row justify-content-center text-white">Login</h3>
    <div class="mb-3">
      <div class="col">
        <input class="form-input form-control" type="text" id="email-login" placeholder="Email" />
      </div>
    </div>
    <div class="mb-3">
      <div class="col">
        <input class="form-input form-control" type="password" id="password-login" placeholder="Password" />
      </div>
    </div>
    <div class="mb-3 ">
      <div class="col text-center">
        <button class="btn" type="submit">Login</button>
      </div>
    </div>
  </div>
</form>




<form class="form signup-form backlight signupEl">
